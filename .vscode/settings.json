{
	"editor.defaultFormatter": "esbenp.prettier-vscode", // if there is still a problem with the default formatter run cmd+shift+p and enter format document with; there you can set the default formatter
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.formatOnType": false,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "file", // required to format on save
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"eslint.validate": ["javascript"],
	"files.autoSave": "onFocusChange",
	"prettier.requireConfig": true,
	// js doc stuff
	"jsdoc-generator.descriptionPlaceholder": "",
	"jsdoc-generator.dateFormat": "MMM Do YYYY"
}
